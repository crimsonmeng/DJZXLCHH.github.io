    <script>
        // 实现可拖动文本块功能
        document.addEventListener('DOMContentLoaded', () => {
            const draggableBlocks = document.querySelectorAll('.draggable-block');
            const minMove = 15;
            const maxMove = 50;
            
            draggableBlocks.forEach(block => {
                let isDragging = false;
                let startY;
                let initialTop;
                let currentTop = 0;
                
                // 记录初始位置
                const style = window.getComputedStyle(block);
                const matrix = new DOMMatrixReadOnly(style.transform);
                initialTop = matrix.m42; // 获取transform中的Y偏移量
                
                // 鼠标按下事件
                block.addEventListener('mousedown', (e) => {
                    isDragging = true;
                    startY = e.clientY;
                    block.style.transition = 'none'; // 拖动时禁用过渡效果
                    block.style.cursor = 'grabbing';
                });
                
                // 鼠标移动事件
                document.addEventListener('mousemove', (e) => {
                    if (!isDragging) return;
                    
                    const diffY = e.clientY - startY;
                    // 限制移动范围在-50到50像素之间
                    currentTop = Math.max(-maxMove, Math.min(diffY, maxMove));
                    
                    // 确保至少移动了最小距离或在最小距离范围内
                    if (Math.abs(currentTop) >= minMove || Math.abs(diffY) < minMove) {
                        block.style.transform = `translateY(${currentTop}px) ${block.classList.contains('rotate-slight') ? 'rotate(-1deg)' : 'rotate(1deg)'}`;
                    }
                });
                
                // 鼠标释放事件
                document.addEventListener('mouseup', () => {
                    if (isDragging) {
                        isDragging = false;
                        block.style.cursor = 'grab';
                        block.style.transition = 'transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)'; // 平滑复位
                        // 恢复到初始位置
                        block.style.transform = block.classList.contains('rotate-slight') ? 'rotate(-1deg)' : 'rotate(1deg)';
                    }
                });
                
                // 触摸设备支持
                block.addEventListener('touchstart', (e) => {
                    isDragging = true;
                    startY = e.touches[0].clientY;
                    block.style.transition = 'none';
                });
                
                document.addEventListener('touchmove', (e) => {
                    if (!isDragging) return;
                    e.preventDefault(); // 防止页面滚动
                    
                    const diffY = e.touches[0].clientY - startY;
                    currentTop = Math.max(-maxMove, Math.min(diffY, maxMove));
                    
                    if (Math.abs(currentTop) >= minMove || Math.abs(diffY) < minMove) {
                        block.style.transform = `translateY(${currentTop}px) ${block.classList.contains('rotate-slight') ? 'rotate(-1deg)' : 'rotate(1deg)'}`;
                    }
                });
                
                document.addEventListener('touchend', () => {
                    if (isDragging) {
                        isDragging = false;
                        block.style.transition = 'transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)';
                        block.style.transform = block.classList.contains('rotate-slight') ? 'rotate(-1deg)' : 'rotate(1deg)';
                    }
                });
            });
        });
    </script>
